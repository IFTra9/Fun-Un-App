<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_about"
    android:layout_width="match_parent"
    android:layout_height="520dp"
    android:background="@drawable/main_activity_background"
    tools:context=".Fragment.AboutFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="520dp">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="520dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/are_you_a_guest_about"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:textColor="@color/colorLight"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/et_about_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="25dp"
                    android:gravity="center"
                    android:textColor="@color/colorLight"
                    android:textSize="40sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight=".1"

                    android:gravity="center_horizontal"
                    android:text="@string/enter_date"
                    android:textColor="@color/colorLight"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_about_date"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight=".1"
                    android:autofillHints=""

                    android:backgroundTint="@color/colorLight"
                    android:gravity="center"
                    android:hint="@string/tapTwice"
                    android:inputType="none"
                    android:maxHeight="240dp"
                    android:textColor="@color/colorLight"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight=".1"

                    android:gravity="center_horizontal"
                    android:text="@string/Location"
                    android:textColor="@color/colorLight"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_about_location"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight=".1"
                    android:backgroundTint="@color/colorLight"

                    android:gravity="center"
                    android:inputType="textAutoCorrect|textMultiLine|textPersonName|text|textAutoComplete"
                    android:maxHeight="240dp"
                    android:textColor="@color/colorLight"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="Autofill,LabelFor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight=".1"

                    android:gravity="center_horizontal"
                    android:text="@string/EnterTime"
                    android:textColor="@color/colorLight"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_about_time"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:layout_marginStart="30dp"
                    android:layout_weight=".1"
                    android:autofillHints=""

                    android:backgroundTint="@color/colorLight"
                    android:gravity="center"
                    android:hint="@string/tapTwice"
                    android:inputType="none"
                    android:maxHeight="240dp"
                    android:textColor="@color/colorLight"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_about_image"
                    android:layout_width="171dp"
                    android:layout_height="153dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:background="@color/colorLight"

                    android:padding="7dp"
                    android:scaleType="fitXY"
                    tools:src="@drawable/icon_add_friend" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_about_update_event"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal|center_vertical"

                        android:layout_marginBottom="20dp"
                        android:background="@drawable/main_rounded_buttons"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center|center_vertical"
                        android:text="@string/saveEventDetails"
                        android:textAllCaps="false"
                        android:textColor="@color/colorLight"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_about_set_calender"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center|center_horizontal|center_vertical"
                        android:background="@drawable/main_rounded_buttons"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center|center_vertical"
                        android:text="@string/saveInCalendar"
                        android:textAllCaps="false"
                        android:textColor="@color/colorLight"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>